<div class='border-4 border-blue-300 bg-gray-200'>
  <div class='container'>
    <h2 class='bg-blue-300 p-2 text-white font-bold text-xl'>
      Sign Up
    </h2>
  </div>

  <div class='container items-center justify-center h-full flex flex-col'>
    <form class='container flex flex-col m-auto p-2' action=''>
      <label class='my-4' for='username'>Username:</label>
      <input
        class='w-full h-10'
        id='username'
        type='text'
        placeholder='username'
      />
      <label class='my-4' for='Password'>Password:</label>
      <input
        class='w-auto h-10'
        id='Password'
        type='text'
        placeholder='password'
      />
      <div class='flex justify-center items-center'>
        <input
          class='bg-gray-500 w-4/6 rounded-xl p-2 text-white mt-6 cursor-pointer hover:bg-gray-700 active:bg-gray-800'
          type='submit'
          value='Sign Up'
          id='signUpBtn'
        />
      </div>
    </form>
    <div class='mt-2 align-left'>
      <a id='logInLink' href='#' class='text-blue-500'>Log in instead</a>
    </div>
  </div>
</div>